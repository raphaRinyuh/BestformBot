{
    "compilerOptions": {
        "target": "ESNext",
		"module": "CommonJS",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
		"moduleResolution": "Node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": false,
		"baseUrl": "./src/",
    },
    "files": [
        "src/main.ts"
    ],
    "include": [
		"./**/*.ts",
		"./**/*.service.ts",
		"./**/*.module.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}